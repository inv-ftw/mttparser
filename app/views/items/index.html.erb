<%= link_to 'Добавить товар', new_item_path ,class: 'pull-right btn btn-primary' %>
<table class="table table-hover table-striped">
  <thead>
    <th>#</th>
    <th>Название</th>
    <th>Рекомендованная цена</th>
    <th></th>

  </thead>
  <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %>$</td>
        <td><%= link_to raw('<i class="fa fa-pencil"></i> ред.'), edit_item_path(item), class: 'btn btn-xs btn-default' %>
            <%= link_to raw('<i class="fa fa-times"></i>'), item_path(item), method: :delete, confirm: 'Удалить?', style: 'color: red;', class: 'btn btn-xs btn-default' %>
        </td>
      </tr>
  <% end %>
</table>

