<%= link_to 'Добавить магазин', new_shop_path,class: 'pull-right btn btn-primary', data:{no_turbolink: true} %>
<table class="table table-hover table-striped">
  <thead>
    <th>Название</th>
    <th>Ссылка</th>
    <th></th>
    <th></th>
  </thead>
  <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.url %></td>
        <td><%= link_to 'ред.', edit_shop_path(shop), data:{no_turbolink: true} %> </td>
        <td><%= link_to 'x', shop_path(shop), method: :delete, confirm: 'Удалить?', style: 'color: red;' %> </td>
      </tr>
  <% end %>
</table>

